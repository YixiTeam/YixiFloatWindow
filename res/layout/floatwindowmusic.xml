<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_container"
    android:layout_width="320.6dp"
    android:layout_height="330.6dp"
    android:background="@drawable/bg_pedometer"
    android:gravity="center" >

    <include
        android:id="@+id/head_layout"
        android:layout_width="320.6dp"
        android:layout_height="wrap_content"
        layout="@layout/floatwindowhead" />

    <FrameLayout
        android:id="@+id/layout_music2"
        android:layout_width="320.6dp"
        android:layout_height="285.6dp"
        android:layout_below="@id/head_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <com.yixi.window.view.FloatMusicView
            android:id="@+id/music_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.yixi.window.view.FloatMusicView>
    </FrameLayout>

</RelativeLayout>